  # -------------Update Certificates/Profiles-------------#
platform :ios do
  desc "Run Sigh - manual certificate and profile management"
  private_lane :run_sigh do |options|
    cert(team_id: ENV["APPLE_TEAM_ID"], username: ENV["APPLE_USERNAME"])

    sigh(
        force: options[:adhoc],
        adhoc: options[:adhoc],
        app_identifier: ENV["BUNDLE_ID"],
        team_id: ENV["APPLE_TEAM_ID"],
        username: ENV["APPLE_USERNAME"]
    )
  end
end
